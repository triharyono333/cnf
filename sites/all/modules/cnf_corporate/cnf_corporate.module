function corporate() {
	global $base_url;
	drupal_goto($base_url.'/corporate/press_coverage');
}

function press_coverage() {
	global $base_url;
	$page = $_GET['page'];
	$archive_month = arg(2);
	$archive_year = arg(3);
	
	if (empty($archive_month) && empty($archive_year)) {
		$query = "SELECT MONTH(FROM_UNIXTIME(field_press_coverate_date_value)) as month, YEAR(FROM_UNIXTIME(field_press_coverate_date_value)) as year "
							. "FROM node a, field_data_field_press_coverate_date b "
							. "WHERE a.nid = b.entity_id AND type='press_coverage' GROUP BY month, year ORDER by year DESC, month DESC LIMIT 1";
		$result = db_query($query);
		foreach ($result as $archive) {
			$archive_month = $archive->month;
			$archive_year = $archive->year;
		}
	}
	if (isset($archive_month) && isset($archive_year)) {
		$archive_query = " AND MONTH(FROM_UNIXTIME(field_press_coverate_date_value)) = '".$archive_month."' AND YEAR(FROM_UNIXTIME(field_press_coverate_date_value)) = '".$archive_year."'";
		/*$query = "SELECT COUNT(nid) FROM node a, field_data_field_press_coverate_date b"
							. " WHERE a.nid = b.entity_id AND type='press_coverage' ".$archive_query;
		$total = db_query($query)->fetchField();
		pager_default_initialize($total,ITEM_PER_PAGE);*/

		$query = "SELECT nid FROM node a, field_data_field_press_coverate_date b"
						. " WHERE a.nid = b.entity_id AND type='press_coverage' ".$archive_query;
		$result = db_query_range($query, $page, ITEM_PER_PAGE);
		foreach ($result as $news) {
			 $node_nids[] = $news->nid;
		}
		$content['month_name'] = date('F', mktime(0, 0, 0, $archive_month, 10));
		$content['year'] = $archive_year;
		$content['press_coverage'] = node_load_multiple($node_nids);
		return theme('cnf_press_coverage', array('content' => $content));
	} else {
		return 'No Press Coverage';
	}
}

