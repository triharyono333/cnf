function cnf_corporate_block_info() {
  $blocks['corporate_menu'] = array('info' => t('Corporate Menu'));
  $blocks['press_coverage_archive'] = array('info' => t('Press Coverage Archive'));
  return $blocks;
}

function cnf_corporate_block_view($delta='') {
  $block = array();
  switch ($delta) {
		case 'corporate_menu':
      $block['subject'] = t('');
      $block['content'] = _corporate_menu();
      break;
    case 'press_coverage_archive':
      $block['subject'] = t('');
      $block['content'] = _press_coverage_archive();
      break;
  }
  return $block;
}

function _corporate_menu() {
	global $base_url;
	$arg0 = arg(0);
	$arg1 = arg(1);
	if ($arg0 == 'corporate' || ($arg0 == 'node' && isset($arg1))) {
		$query = "SELECT nid, title FROM node WHERE type='corporate'";
		$result = db_query($query);
		$output = '<ul class="sidebar-menu">';
		foreach($result as $row) {
			$alias = drupal_lookup_path('alias',"node/".$row->nid);
			$active1 = '';
			if ($arg1 == $row->nid) $active1 = 'class="active"';
				$output .= '<li '.$active1.'><a title="'.$row->title.'" href="'.$base_url.'/'.$alias.'">'.$row->title.'</a></li>';
		}
		if ($arg0 == 'corporate' && $arg1 == 'press_coverage') $active2 = 'class="active"';
		$output .= '<li '.$active2.'><a title="Press Coverage" href="'.$base_url.'/corporate/press_coverage">Press Coverage</a></li>';
		$output .= '</ul>';
		return $output;
	}
}

function _press_coverage_archive(){
    global $base_url;
		$arg0 = arg(0);
		$arg1 = arg(1);
		$arg2 = arg(2);
		if ($arg0 == 'corporate' && $arg1 == 'press_coverage') {
			$archive_month = arg(2);
			$archive_year = arg(3);

			if (empty($archive_month) && empty($archive_year)) {
				$query = "SELECT MONTH(FROM_UNIXTIME(field_press_coverate_date_value)) as month, YEAR(FROM_UNIXTIME(field_press_coverate_date_value)) as year "
									. "FROM node a, field_data_field_press_coverate_date b "
									. "WHERE a.nid = b.entity_id AND type='press_coverage' GROUP BY month, year ORDER by year DESC, month DESC LIMIT 1";
				$result = db_query($query);
				foreach ($result as $archive) {
					$archive_month = $archive->month;
					$archive_year = $archive->year;
				}
			}
	
			$query = "SELECT MONTH(FROM_UNIXTIME(field_press_coverate_date_value)) as month, YEAR(FROM_UNIXTIME(field_press_coverate_date_value)) as year "
							. "FROM node a, field_data_field_press_coverate_date b "
							. "WHERE a.nid = b.entity_id AND type='press_coverage' GROUP BY month, year ORDER by year DESC, month DESC LIMIT 12";
			$result = db_query($query);
			$output = '<h4>Archives</h4> <ul class="hover-effect archives">';
			foreach ($result as $archive) {
				if ($archive_month == $archive->month && $archive_year == $archive->year) $active = 'class="active"';
				else $active = '';
				$output .= '<li '.$active.'>'
					. '<a href="'.$base_url.'/corporate/press_coverage/'.$archive->month.'/'.$archive->year.'">'.date("F",mktime(0,0,0,$archive->month,1,$archive->year)).' '.$archive->year.'</a></li>';
			}
			$output .= '</ul>';

			return $output;
		}
}

